{
  "name": "github-asana-issue-sync-cloudflare",
  "version": "1.0.0",
  "description": "Cloudflare Worker to sync GitHub issues to Asana tasks via webhooks",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev --local --port 8787",
    "dev:remote": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:webhook": "node dev/test-webhook.js",
    "test:webhook:opened": "node dev/test-webhook.js issueOpened",
    "test:webhook:edited": "node dev/test-webhook.js issueEdited",
    "test:webhook:closed": "node dev/test-webhook.js issueClosed",
    "test:webhook:reopened": "node dev/test-webhook.js issueReopened",
    "test:webhook:comment": "node dev/test-webhook.js commentCreated",
    "test:webhook:pr-opened": "node dev/test-webhook.js prOpened",
    "test:webhook:pr-edited": "node dev/test-webhook.js prEdited",
    "test:webhook:pr-closed": "node dev/test-webhook.js prClosed",
    "test:webhook:pr-reopened": "node dev/test-webhook.js prReopened",
    "test:webhook:pr-comment": "node dev/test-webhook.js prCommentCreated",
    "test:real": "node dev/test-real-github.js",
    "import": "node dev/bulk-import.js",
    "configure-repo": "node dev/setup-repo.js",
    "logs": "wrangler tail"
  },
  "dependencies": {
    "asana": "^3.0.2",
    "micromark": "^4.0.1",
    "micromark-extension-gfm": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "vitest": "^2.1.3",
    "wrangler": "^3.78.12"
  }
}
